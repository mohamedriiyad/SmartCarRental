@model IEnumerable<SmartCarRental.Models.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-car icon-gradient bg-happy-itmeo">
                </i>
            </div>
            <div>
                Your Rented Cars
                <div class="page-title-subheading">

                </div>
            </div>
        </div>
        <div class="page-title-actions">

        </div>
    </div>
</div>
<div class="container-fluid pt-5">
    <div class="container pt-5 pb-3">
        <table class="table" style="text-align:center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstLocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SecondLocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AvailableFrom)
                    </th>
                    @*<th>
                            Phone
                        </th>
                        <th>
                            AvailableFrom
                        </th>*@
                    <th>
                        Status
                    </th>
                    <th>--------</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstLocation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SecondLocation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvailableFrom)
                        </td>
                        <td>
                            Booked Up
                        </td>
                        <td style="font-size: 20px;">
                            @*<a style="color: #afafaa;" data-toggle="tooltip" data-placement="left" title="Edit" href="@Url.Action("Create", "UserRents", new { id = item.Id})"><i title="Edit" class="fa fa-pen"></i></a>*@

                            <a href="#" style="color:red;" data-placement="left" data-toggle="modal" data-target=".bd-example-modal-sm" title="Delete" onclick="confirm('@item.Id')"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>